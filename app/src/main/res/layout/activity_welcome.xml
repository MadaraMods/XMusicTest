<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/top_window"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_bar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                app:trackStopIndicatorSize="0dp"
                app:trackColor="@android:color/transparent"
                app:waveAmplitude="2dp"
                app:wavelength="30dp"
                app:waveSpeed="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:transitionGroup="true">
            <LinearLayout
                android:id="@+id/first_screen"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/top_title"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:textSize="35sp"
                    android:textColor="?colorOnSurface"
                    android:text="XMusic" />
                <TextView
                    android:id="@+id/top_subtitle"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:textSize="25sp"
                    android:textColor="?colorOutline"
                    android:text="Materialize your playback" />
                <ImageView
                    android:id="@+id/illustration"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/intro_illustration"
                    android:layout_margin="50dp" />
                <TextView
                    android:id="@+id/small_tip"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:textSize="14sp"
                    android:textColor="?colorOutline"
                    android:text="Let's get things ready for you!" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/second_screen"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/music_icon"
                        android:layout_height="175dp"
                        android:layout_width="175dp"
                        android:padding="25dp"
                        android:src="@drawable/icon_library_music_round"
                        android:tint="?colorPrimary"
                        android:background="@drawable/pic_bg"
                        android:layout_marginHorizontal="70dp" />
                    <TextView
                        android:id="@+id/permission1_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginVertical="30dp"
                        android:layout_marginHorizontal="30dp"
                        android:textSize="16dp"
                        android:textColor="?colorOnSurface"
                        android:text="XMusic needs audio access permission in order to be able of listing your songs" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/permission1_button"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Grant permission" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/third_screen"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/notification_icon"
                        android:layout_height="175dp"
                        android:layout_width="175dp"
                        android:padding="25dp"
                        android:src="@drawable/icon_notification"
                        android:tint="?colorPrimary"
                        android:background="@drawable/pic_bg"
                        android:layout_marginHorizontal="70dp" />
                    <TextView
                        android:id="@+id/permission2_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginVertical="30dp"
                        android:layout_marginHorizontal="30dp"
                        android:textSize="16dp"
                        android:textColor="?colorOnSurface"
                        android:text="XMusic needs notifications post permission in order to display playback notification correctly" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/permission2_button"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Grant permission" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fourth_screen"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/part_1_view"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/tg_icon"
                        android:layout_height="175dp"
                        android:layout_width="175dp"
                        android:padding="25dp"
                        android:src="@drawable/icon_telegram"
                        android:tint="?colorPrimary"
                        android:background="@drawable/pic_bg"
                        android:layout_marginHorizontal="70dp" />
                    <TextView
                        android:id="@+id/tip_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginVertical="30dp"
                        android:layout_marginHorizontal="30dp"
                        android:textSize="16dp"
                        android:textColor="?colorOnSurface"
                        android:text="Join our telegram group for support, community chat, sneak peaks and more!" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/join_button"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Join community" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/final_screen"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/done_icon"
                        android:layout_height="175dp"
                        android:layout_width="175dp"
                        android:padding="25dp"
                        android:src="@drawable/icon_done_all"
                        android:tint="?colorPrimary"
                        android:background="@drawable/pic_bg"
                        android:layout_marginHorizontal="70dp" />
                    <TextView
                        android:id="@+id/final_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginVertical="30dp"
                        android:layout_marginHorizontal="30dp"
                        android:textSize="16dp"
                        android:textColor="?colorOnSurface"
                        android:text="Now that eveything is ready, XMusic will perform an initial songs data load to improve future experience, Click on the start button when you're ready" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/start_button"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Start" />
                </LinearLayout>
            </LinearLayout>
             <LinearLayout
                    android:id="@+id/part_2_view"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:gravity="center">
                    <com.google.android.material.loadingindicator.LoadingIndicator
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        app:indicatorSize="70dp"
                        style="@style/Widget.Material3.LoadingIndicator.Contained" />
                    <TextView
                        android:id="@+id/loading_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginHorizontal="30dp"
                        android:textSize="16dp"
                        android:textColor="?colorOnSurface"
                        android:text="Loading songs...(x loaded)" />
             </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_window"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/bottom_card"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                style="@style/Widget.Material3.CardView.Elevated"
                app:minHeight="0dp"
                app:cardCornerRadius="30dp">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_gravity="right|center_vertical"
                        app:srcCompat="@drawable/ic_arrow_back_black_24"
                        android:enabled="false"
                        style="@style/Widget.Material3.FloatingActionButton.Primary"
                        app:elevation="0dp"
                        android:translationZ="0dp"
                        android:elevation="0dp"
                        app:pressedTranslationZ="0dp"
                        app:useCompatPadding="false"
                        android:stateListAnimator="@null" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="16dp"
                        android:clipToPadding="false"
                        android:clipChildren="false">
                        <TextSwitcher
                            android:id="@+id/progress_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_gravity="center" />
                    </FrameLayout>
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_gravity="left|center_vertical"
                        app:srcCompat="@drawable/ic_arrow_forward"
                        android:enabled="true"
                        style="@style/Widget.Material3.FloatingActionButton.Primary"
                        app:elevation="0dp"
                        android:translationZ="0dp"
                        android:elevation="0dp"
                        app:pressedTranslationZ="0dp"
                        app:useCompatPadding="false"
                        android:stateListAnimator="@null" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSurface">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior"
        android:fitsSystemWindows="true"
        android:id="@+id/appbar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_height="?attr/collapsingToolbarLayoutLargeSize"
            android:layout_width="match_parent"
            android:id="@+id/collapsingtoolbar"
            app:contentScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                app:title="Settings"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:layout_collapseMode="pin"
                android:id="@+id/toolbar" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/nested_scroll_view">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/drawable_settings_item_background"
                android:paddingVertical="16dp"
                android:paddingHorizontal="24dp"
                android:id="@+id/ui"
                tools:ignore="UselessParent">

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_palette"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="25dp"
                    app:tint="?colorPrimary"
                    android:id="@+id/ui_icon" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toEndOf="@id/ui_icon"
                    android:textSize="18sp"
                    android:textColor="?colorOnSurface"
                    android:id="@+id/ui_name"
                    android:text="Appearance"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/ui_name"
                    android:layout_toEndOf="@id/ui_icon"
                    android:textSize="16sp"
                    android:textColor="?colorOnSurfaceVariant"
                    android:id="@+id/ui_description"
                    android:text="Customize Xmusic UI" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/drawable_settings_item_background"
                android:paddingVertical="16dp"
                android:paddingHorizontal="24dp"
                android:id="@+id/place"
                tools:ignore="UselessParent">

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_android"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="25dp"
                    app:tint="?colorPrimary"
                    android:id="@+id/place_icon" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toEndOf="@id/place_icon"
                    android:textSize="18sp"
                    android:textColor="?colorOnSurface"
                    android:id="@+id/place_name"
                    android:text="PlaceHolder Title"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/place_name"
                    android:layout_toEndOf="@id/place_icon"
                    android:textSize="16sp"
                    android:textColor="?colorOnSurfaceVariant"
                    android:id="@+id/place_description"
                    android:text="PlaceHolderDescription" />

            </RelativeLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
